{
    "manifest_version": 3,
    "name": "xRead",
    "version": "1.0",
    "description": "xRead - Read and Earn. Let your extension run in the background and earn $READ.",
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": "public/icon.png"
    },
    "icons": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
    }
  }
  